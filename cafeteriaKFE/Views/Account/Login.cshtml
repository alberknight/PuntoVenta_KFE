@model cafeteriaKFE.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center min-vh-75 py-5">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Iniciar Sesión</h4>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">Introduce tus credenciales para acceder al sistema.</p>

                <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" novalidate>
                    <div asp-validation-summary="All" class="alert alert-danger d-none" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Contraseña" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" id="RememberMe" />
                        <label class="form-check-label" for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>

                    <div class="d-grid mb-2">
                        <button type="submit" class="btn btn-primary btn-lg">Iniciar Sesión</button>
                    </div>

                    <div class="text-center">
                        <small class="text-muted">¿No tienes una cuenta? <a asp-action="Register">Registrarse</a></small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("../_ValidationScriptsPartial");
    }
}