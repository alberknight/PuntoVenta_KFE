@model cafeteriaKFE.Core.Home.Request.DashboardViewRequest
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h3 class="mb-0">Dashboard</h3>
            <small class="text-muted">Resumen del día</small>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-primary" asp-controller="Pos" asp-action="Venta">
                Ir a Punto de Venta
            </a>
        </div>
    </div>

    <!-- KPIs -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Ventas hoy</div>
                    <div class="fs-4 fw-bold">$@Model.SalesToday.ToString("0.00")</div>
                    <div class="text-muted small">Suma de ventas del día</div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Tickets</div>
                    <div class="fs-4 fw-bold">@Model.TicketsToday</div>
                    <div class="text-muted small">órdenes del día</div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Ticket promedio</div>
                    <div class="fs-4 fw-bold">$@Model.AvgTicketToday.ToString("0.00")</div>
                    <div class="text-muted small">Ventas hoy / tickets</div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Productos vendidos</div>
                    <div class="fs-4 fw-bold">@Model.ProductsSoldToday</div>
                    <div class="text-muted small">Suma de Quantity del día</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Analysis blocks -->
    <div class="row g-3">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <strong>Ventas por producto</strong>
                    <span class="text-muted small">(hoy)</span>
                </div>
                <div class="card-body">
                    <canvas id="salesByProductChart" height="220"></canvas>
                </div>
            </div>

        </div>

        <div class="col-12 col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-white d-flex align-items-center justify-content-between">
                    <div>
                        <strong>Top productos</strong>
                        <span class="text-muted small"> (all-time)</span>
                    </div>

                    <a href="/Product/Reports/Sales" class="btn btn-sm btn-outline-primary">
                        Detalles
                    </a>
                </div>

                <div class="card-body">
                    @if (Model.TopProductsAllTime.Count == 0)
                    {
                        <div class="text-muted">Sin datos a�n.</div>
                    }
                    else
                    {
                        <ol class="mb-0">
                            @foreach (var item in Model.TopProductsAllTime)
                            {
                                <li class="d-flex justify-content-between">
                                    <span>@item.Name</span>
                                    <span class="text-muted">@item.QuantitySold</span>
                                </li>
                            }
                        </ol>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chartjs/chart.min.js"></script>

    <script>
        const products = @Html.Raw(
        System.Text.Json.JsonSerializer.Serialize(
            Model.ProductsSoldTodayForChart.Select(p => new {
                name = p.Name,
                total = p.QuantitySold
            })
        )
    );
        if (products.length > 0) {
            const ctx = document.getElementById('salesByProductChart');

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: products.map(p => p.name),
                    datasets: [{
                        data: products.map(p => p.total),
                        backgroundColor: [
                            '#0d6efd',
                            '#198754',
                            '#ffc107',
                            '#dc3545',
                            '#6f42c1'
                        ]
                    }]
                },
                options: {
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }
    </script>
}

