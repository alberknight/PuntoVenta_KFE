@{
    ViewData["Title"] = "Venta";
}

<div class="container-fluid py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="mb-0">Venta</h3>
            <small class="text-muted">Escanea código de barras o busca por nombre</small>
        </div>

        <div class="d-flex gap-2">
            <a asp-controller="Product" asp-action="Catalog" class="btn btn-outline-secondary">
                Ver lista de productos
            </a>
        </div>
    </div>

    <div class="row g-3">
        <!-- Left: Search / Add -->
        <div class="col-12 col-lg-5 col-xl-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <label class="form-label fw-semibold">Buscar producto</label>

                    <div class="input-group mb-2">
                        <span class="input-group-text">🔎</span>
                        <input id="productSearch" type="text" class="form-control"
                               placeholder="Código de barras o nombre (Enter para buscar)" />
                        <button id="btnSearch" class="btn btn-primary" type="button">
                            Buscar
                        </button>
                    </div>

                    <div id="searchHint" class="text-muted small mb-2">
                        Enter para buscar. Si hay un solo resultado, se abre configuración automáticamente.
                    </div>

                    <div id="searchError" class="alert alert-danger d-none mb-2"></div>

                    <!-- Search results -->
                    <div id="searchResultsWrap" class="d-none">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Resultados</small>
                            <button id="btnClearResults" type="button" class="btn btn-sm btn-outline-secondary">Limpiar</button>
                        </div>

                        <div class="list-group mt-2" id="searchResults"></div>
                    </div>

                    <hr />

                    <div class="d-flex gap-2">
                        <button id="btnClearCart" class="btn btn-outline-danger w-50" type="button">
                            Vaciar carrito
                        </button>
                        <button id="btnPay" class="btn btn-success w-50" type="button" data-bs-toggle="modal" data-bs-target="#payModal">
                            Pagar
                        </button>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Subtotal</span>
                        <span id="subtotal">$0.00</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Descuento</span>
                        <span id="discount">$0.00</span>
                    </div>
                    <hr class="my-2" />
                    <div class="d-flex justify-content-between fs-5 fw-bold">
                        <span>Total</span>
                        <span id="total">$0.00</span>
                    </div>

                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" id="isDelivery">
                        <label class="form-check-label" for="isDelivery">
                            Es delivery (Rappi/Uber)
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right: Cart -->
        <div class="col-12 col-lg-7 col-xl-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex align-items-center justify-content-between">
                    <strong>Carrito</strong>
                    <span class="badge text-bg-secondary" id="itemsCount">0 items</span>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50%;">Producto</th>
                                <th class="text-end">Precio</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Importe</th>
                                <th class="text-end" style="width: 1%;"> </th>
                            </tr>
                        </thead>
                        <tbody id="cartBody">
                            <tr class="text-muted">
                                <td colspan="5" class="text-center py-4">
                                    Aún no hay productos en el carrito.
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white text-muted small">
                    Tip: busca por barcode o nombre, selecciona Size + MilkType y se agrega al carrito.
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Configurar producto (obligatorio para café) -->
<div class="modal fade" id="configModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Configurar producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <div class="mb-2">
                    <div class="fw-semibold" id="cfgProductName">Producto</div>
                    <div class="text-muted small" id="cfgProductCode">Código:</div>
                </div>

                <div id="cfgError" class="alert alert-danger d-none"></div>

                <div class="row g-2">
                    <div class="col-12">
                        <label class="form-label">Tamaño (Size)</label>
                        <select id="cfgSize" class="form-select"></select>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Tipo de leche (MilkType)</label>
                        <select id="cfgMilk" class="form-select"></select>
                    </div>
                    <!-- Temperature (ProductTypeId = 2) -->
                    <div id="tempSection" class="mb-3 d-none">
                        <label class="form-label">Temperatura</label>
                        <select id="cfgTemp" class="form-select">
                            <option value="">Selecciona una temperatura</option>
                        </select>
                    </div>

                    <!-- Syrup (ProductTypeId = 3) -->
                    <div id="syrupSection" class="mb-3 d-none">
                        <label class="form-label">Jarabe</label>
                        <select id="cfgSyrup" class="form-select">
                            <option value="">Selecciona un jarabe</option>
                        </select>
                    </div>

                    <!-- Whipped Cream (ProductTypeId = 4) -->
                    <div id="whipSection" class="form-check mb-3 d-none">
                        <input class="form-check-input" type="checkbox" id="cfgWhip">
                        <label class="form-check-label" for="cfgWhip">
                            Con crema batida
                        </label>
                    </div>



                    <div class="col-12">
                        <label class="form-label">Cantidad</label>
                        <input id="cfgQty" type="number" class="form-control" value="1" min="1" />
                    </div>
                </div>

                <hr class="my-3" />

                <div class="d-flex justify-content-between">
                    <span class="text-muted">Precio unitario</span>
                    <strong id="cfgUnitPrice">$0.00</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Total línea</span>
                    <strong id="cfgLineTotal">$0.00</strong>
                </div>
            </div>

            <div class="modal-footer">
                <button id="btnCfgAdd" type="button" class="btn btn-primary">
                    Agregar al carrito
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Pay Modal -->
<div class="modal fade" id="payModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Pagar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <div id="payError" class="alert alert-danger d-none"></div>
                <div id="paySuccess" class="alert alert-success d-none"></div>

                <div class="mb-3">
                    <label class="form-label">Método de pago</label>
                    <div class="d-flex gap-2">
                        <button id="payCash" class="btn btn-outline-success w-50" type="button">
                            Efectivo
                        </button>
                        <button id="payCard" class="btn btn-outline-primary w-50" type="button">
                            Tarjeta
                        </button>
                    </div>
                </div>

                <!-- Cash section -->
                <div id="cashSection" class="d-none">
                    <label class="form-label">Recibido</label>
                    <input id="cashReceived" type="number" class="form-control" placeholder="0.00" />
                    <div class="mt-2 d-flex justify-content-between">
                        <span class="text-muted">Cambio</span>
                        <strong id="cashChange">$0.00</strong>
                    </div>
                    <button id="btnCashConfirm" class="btn btn-success w-100 mt-3" type="button">
                        Confirmar efectivo
                    </button>
                </div>

                <!-- Card section -->
                <div id="cardSection" class="d-none">
                    <div class="alert alert-info mb-3">
                        Simulación: procesando pago con tarjeta…
                    </div>

                    <div id="cardProcessing" class="d-flex align-items-center gap-2">
                        <div class="spinner-border" role="status" aria-hidden="true"></div>
                        <div>Procesando…</div>
                    </div>

                    <div id="cardSuccess" class="alert alert-success d-none mt-3 mb-0">
                        Pago exitoso ✅
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button id="btnClosePay" type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pos-venta.js" asp-append-version="true"></script>
}
