@model cafeteriaKFE.Core.Users.Request.GetUsersDetailsRequest

@{
    ViewData["Title"] = "User Details";
}

<h1>Detalles de usuario</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id de usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.userId)
        </dd>
        <dt class="col-sm-2">
            Nombre(s)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Apellidos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.lastname)
        </dd>
        <dt class="col-sm-2">
            Correo electronico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">
            No. telofonico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.phoneNumber)
        </dd>
        <dt class="col-sm-2">
            Fecha de registro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.createdAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.userId">Editar</a> |
    <a asp-action="All">Volver al inicio</a>
</div>